"
"   .gvimrc
"
filetype plugin on

set iminsert=0 imsearch=0
set antialias
set macatsui
set clipboard+=unnamed
"set guifont=Osaka-Mono:h14
set guifont=Monaco:h12
set guifontwide=Osaka-Mono:h14
set transparency=20

"   window settings for macbook
set columns=120
set lines=60

"   syntax highlight
set background=dark
hi Normal   guifg=White     guibg=Black
hi Comment  guifg=Red       guibg=Black
